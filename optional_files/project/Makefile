PROJECTS := GoogleTest CAST

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

GoogleTest:
ifneq (,$(GoogleTest_config))
	@echo "==== Building GoogleTest ($(GoogleTest_config)) ===="
	@${MAKE} --no-print-directory -C libs/GoogleTest -f Makefile config=$(GoogleTest_config)
endif

CAST: GoogleTest
ifneq (,$(CAST_config))
	@echo "==== Building CAST ($(CAST_config)) ===="
	@${MAKE} --no-print-directory -C . -f CAST.make config=$(CAST_config)
endif

clean:
	@${MAKE} --no-print-directory -C libs/GoogleTest -f Makefile clean
	@${MAKE} --no-print-directory -C . -f CAST.make clean

